<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/go4lunchOrange</item>
        <item name="colorPrimaryDark">@color/go4lunchOrangeLight</item>
        <item name="colorAccent">@color/go4lunchGreen</item>
    </style>

    <style name="go4lunch_style" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/go4lunchRed</item>
        <item name="colorPrimaryVariant">@color/go4lunchRedDark</item>
        <item name="colorOnPrimary">@color/go4lunchWhite</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/go4lunchGreen</item>
        <item name="colorSecondaryVariant">@color/go4lunchGrey</item>
        <item name="colorOnSecondary">@color/go4lunchBlack</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="r">?attr/colorPrimaryVariant</item>
    </style>
    <!-- STYLE FOR LOGIN ACTIVITY -->
    <style name="go4lunch_login" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/go4lunchOrangeLight</item>
        <item name="colorPrimaryDark">@color/go4lunchOrangeDark</item>
        <item name="colorAccent">@color/go4lunchRed</item>
        <item name="colorButtonNormal">@color/go4lunchRedDark</item>
        <item name="colorControlNormal">@android:color/darker_gray</item>
        <item name="colorControlActivated">@android:color/darker_gray</item>
        <item name="colorControlHighlight">@android:color/darker_gray</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/darker_gray</item>
        <item name="android:textColorSecondary">@android:color/darker_gray</item>
        <item name="android:src">@drawable/restaurant_background_portrait_blur</item>
        <item name="android:windowBackground">@color/go4lunchOrange</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
    </style>
    <!-- STYLE FOR MAIN ACTIVITY -->
    <style name="AppTheme.NoTitle" parent="go4lunch_style">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="actionBarTheme">@null</item>
    </style>
    <!-- STYLE FOR DRAWER ARROW -->
    <style name="DrawerStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/go4lunchWhite</item>
        <item name="itemIconTint">@color/go4lunchWhite</item>
        <item name="itemTextColor">@color/go4lunchWhite</item>
        <item name="itemTextAppearance">@style/TextDrawerStyle</item>
    </style>
    <!-- STYLE FOR DRAWER -->
    <style name="TextDrawerStyle" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
    </style>
    <!-- Toolbar theme. -->
    <style name="ToolBarStyle" parent="AppTheme">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
    </style>
    <!-- AppBarOverlay theme. -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <!-- PopupOverlay theme. -->
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <!-- DrawerArrowToggle theme. -->
    <style name="MyDrawerArrowToggle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/go4lunchOrangeDark</item>
    </style>
    <style name="FAB" parent="@style/Widget.MaterialComponents.FloatingActionButton">
        <item name="materialThemeOverlay">@style/MyFabOverlay</item>
    </style>

    <style name="MyFabOverlay">
        <!-- color of the background -->
        <item name="colorSecondary">@color/go4lunchWhite</item>
        <!-- color of the icon -->
        <item name="colorOnSecondary">@color/go4lunchGrey</item>
    </style>
</resources>