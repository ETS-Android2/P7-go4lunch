<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.go4lunch" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/go4lunchOrange</item>
        <item name="colorPrimaryVariant">@color/go4lunchOrangeDark</item>
        <item name="colorOnPrimary">@color/go4lunchWhite</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/go4lunchGreen</item>
        <item name="colorSecondaryVariant">@color/go4lunchGrey</item>
        <item name="colorOnSecondary">@color/go4lunchBlack</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.go4lunch.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.go4lunch.AppBarOverlay" parent="Theme.MaterialComponents.DayNight.NoActionBar" />

    <style name="Theme.go4lunch.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>