<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_workmate_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:gravity="center_vertical">

<ImageView
    android:id="@+id/item_workmate_icon"
    android:layout_width="0dp"
    android:layout_height="50dp"
    android:src="@drawable/ic_baseline_person_outline_24"
    android:scaleType="fitCenter"
    android:layout_weight="1"
    app:tint="@color/go4lunchOrange"
    android:contentDescription="@string/workmate_image" />

    <TextView
        android:id="@+id/item_workmate_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/this_workmate_approves"
        android:layout_weight="3"/>

</LinearLayout>